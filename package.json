		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"html-webpack-plugin": "^5.6.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"merge": "^2.1.1",
		"mini-css-extract-plugin": "^2.9.0",
		"postcss-loader": "^8.1.1",
		"prettier": "^3.2.5",
		"react-refresh": "^0.14.2",
		"sass": "^1.76.0",
		"sass-loader": "^14.2.1",
